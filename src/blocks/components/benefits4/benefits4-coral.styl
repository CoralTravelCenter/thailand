.dm-benefits4
    margin-bottom em(60)

    @media screen and (min-width: 769px)
        margin-bottom em(40)
        margin-left auto
        margin-right auto

    &__items
        padding 0 em(50)

        @media screen and (min-width: 769px)
            padding 0
            // display flex
            // flex-wrap wrap

    &__item
        margin-bottom em(80)

        @media screen and (min-width: 769px)
            display flex
            margin-bottom em(60)

            .dm-benefits4__item-desc
                width em(572)
            
            &:nth-child(even)
                flex-direction row-reverse

                .dm-benefits4__item-desc
                    width em(516)
                
    &__img-wrap

    &__img
        display block
        height auto
        border-radius em(50)
        width em(620)
        margin-bottom em(40)

        @media screen and (min-width: 769px)
            width em(680)
            margin-bottom 0


    &__item-desc
        display flex
        flex-direction column
        justify-content center
        text-align center

        @media screen and (min-width: 769px)
            margin-left auto
            margin-right auto
            text-align left

    &__item-text
        font-weight 400
        font-size 1em
        line-height (19/16em)

        a
            color #0093D0!important

            &:hover
                text-decoration underline

    &__title
        font-size em(48)
        line-height (52/48em)
        color #000
        text-align center
        margin-bottom (40/48em)

        @media screen and (min-width: 769px)
            font-size em(40)
            line-height (48/40em)
            text-align left
    
    &__text
        font-size em(24)
        line-height (32/24em)
        color #000
        text-align center
        font-weight 350
        margin-bottom (40/24em)

        @media screen and (min-width: 769px)
            font-size em(20)
            line-height (28/20em)
            text-align left