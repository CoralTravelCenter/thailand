.dm-benefits6
    padding-top em(60)
    margin-bottom em(50)

    @media screen and (min-width: 769px)
        text-align center
        padding-top em(60)
        margin-bottom em(60)

    &__desc
        padding 0 em(60) em(60)

        @media screen and (min-width: 769px)
            padding 0 0 em(60)
            max-width em(952)
            margin-left auto
            margin-right auto

    &__items
        padding 0 em(30)
        display flex
        flex-wrap wrap
        justify-content space-between

        @media screen and (min-width: 769px)
            padding 0

    &__item
        flex-basis: auto
        margin-bottom em(60)
        display flex
        flex-direction column
        align-items: center
        flex 0 0 em(300)

        @media screen and (min-width: 769px)
            flex 0 0 em(160)

    &__img-wrap
        margin-bottom em(12)

        @media screen and (min-width: 769px)
            // margin-bottom 0

    &__img
        width em(300)
        height em(80)
        background-repeat no-repeat
        background-position 50% 0
        background-size contain

        @media screen and (min-width: 769px)
            width em(160)

        &--1
            background-image embedurl('../img/content/sunmar/icon-1.svg')
        &--2
            background-image embedurl('../img/content/sunmar/icon-2.svg')
        &--3
            background-image embedurl('../img/content/sunmar/icon-3.svg')
        &--4
            background-image embedurl('../img/content/sunmar/icon-4.svg')
        &--5
            background-image embedurl('../img/content/sunmar/icon-5.svg')
        &--6
            background-image embedurl('../img/content/sunmar/icon-6.svg')

    &__title
        font-size em(32)
        line-height (44/32em)
        text-align center

        @media screen and (min-width: 769px)
            font-size em(24)
            line-height (32/24em)

    &__header
        font-size em(48)
        line-height (52/48em)
        text-align center
        font-weight 700
        color #000
        margin-top 1em

        @media screen and (min-width: 769px)
            font-size em(40)
            line-height (44/40em)

    &__btn-wrap
        text-align center

    &__title2
        font-size em(32)
        color #000
        text-align center
        margin-bottom (40/32em)

        @media screen and (min-width: 769px)
            font-size em(40)
            line-height (44/40em)
            margin-bottom 0