.dm-tab
    &__headers
        padding 0 em(50)
        display flex
        justify-content space-between
        margin-bottom em(100)

        @media screen and (min-width: 769px)
            margin-bottom em(70)
    
    &__title
        line-height em(19)
        color #fff
        background-color #C4C4C4
        transition all 0.3s
        border-radius em(10)
        text-align center
        cursor pointer
        padding em(16) em(8)
        flex 1 1 50%
        margin 0 0.5em
        user-select none
        
        @media screen and (min-width: 769px)
            padding em(16) em(8)
            line-height 1.3

        &:hover
        &.selected
            background-color #BE0027

        &__span
            text-transform uppercase
            font-weight 700
            display block

        &:first-child
            margin-left 0
        
        &:last-child
            margin-right 0

    &__text        
        font-size em(24)
        line-height (28em/24)
        text-align center
        padding 0 (50em/24)
        margin-bottom (100em/24)

        @media screen and (min-width: 769px)
            margin-bottom (70/24em)

.dm-list
    padding 0 em(40)
    margin-bottom em(64)

    @media screen and (min-width: 769px)
        padding 0
        margin-bottom em(34)
        display flex
        flex-wrap wrap
        justify-content space-between

    &__item
        position relative

        @media screen and (min-width: 769px)        
            width em(642)
            width 46%
            margin-bottom em(70)
            margin-left 2%
            margin-right 2%

    &__item + &__item
        margin-top em(30)

        @media screen and (min-width: 769px)
            margin-top 0

    &__img
        display block
        width 100%
        height auto
        max-width 100%
    
    &__title
        font-size em(48)
        line-height (56em/48)
        color #fff
        position absolute
        left (20em/48)
        right (20em/48)
        top (36em/48)
        text-align center
        font-weight 700

.dm-steps
    padding 0 em(50)

.dm-step

    &__item + &__item
        margin-top em(100)

    &__title
        font-size em(24)
        line-height (28em/24)
        text-align center
        font-weight 700
        margin-bottom (28em/24)
        text-transform uppercase

    &__body
        font-size em(24)
        line-height (28em/24)
        text-align center
        margin-bottom (60/24em)

    &__img
        display block
        // width 100%
        height auto
        max-width 100%

.dm-block-text2
    &__wrap
        padding 0 em(50)

        &:last-child
            .dm-block-text2__right
                padding-bottom 0

        @media screen and (min-width: 769px)
            padding 0
            box-shadow 0px 0px 6px #283067
            display flex

            & + &
                margin-top em(60)

    &__left
        @media screen and (min-width: 769px)
            min-width em(685)
            width em(685)
            max-width em(685)

    &__right
        max-width em(508)
        padding em(60) 0 em(80)

        @media screen and (min-width: 769px)
            max-width none
            flex-grow 1
            padding em(36) em(88) 0 em(88)

    &__img
        display block
        width 100%
        height auto
        max-width 100%

    &__img + &__img
        margin-top em(22)
    
    &__title
        font-size em(24)
        line-height (28/24em)
        text-transform uppercase
        font-weight 700
        font-family Arial
        margin-bottom (30/24em)
        // color #283067
    
    &__text
        font-size em(22)
        line-height (25/22em)

        p
            margin 0
        
        p + p
            margin-top 1.5em

.dm-block-text2__wrap--tab2
    @media screen and (min-width: 769px)    
        .dm-block-text2__text p + p
            margin-top 0.8em
        
        .dm-block-text2__title
            margin-bottom 1em

.dm-list--ticket
    width em(404)
    margin 0 auto

.dm-list__item--ticket
    margin 0

    @media screen and (min-width: 769px)
        width auto

.dm-tab__headers--main
    .dm-tab__title
        flex-basis 32%

.dm-tab__headers--tickets
    flex-wrap wrap
    justify-content center
    margin-bottom em(60)

    @media screen and (min-width: 769px)
        margin-bottom em(90)

    .dm-tab__title
        display inline-flex
        flex 1 1 auto
        justify-content center
        align-items center
        margin 0.5em
        white-space nowrap

        @media screen and (min-width: 769px)
            flex-basis 10%
            flex-wrap nowrap

.dm-block-text2__wrap--la-perle
    display flex
    flex-direction column-reverse

    @media screen and (min-width: 769px)
        box-shadow none
        flex-direction row-reverse
        justify-content center
        padding-left em(20)
        padding-right em(20)
        margin-bottom em(30)

    .dm-block-text2__right
        max-width none
        padding 0 0 em(36)

        @media screen and (min-width: 769px)
            display flex
            align-items center
            width em(600)
            max-width em(600)
            min-width em(600)

    .dm-block-text2__left
        margin-bottom em(100)

        @media screen and (min-width: 769px)            
            width em(556)
            max-width em(556)
            min-width em(556)
            margin-left em(44)
            margin-bottom 0

    .dm-block-text2__img
        width em(556)
        margin-left auto
        margin-right auto