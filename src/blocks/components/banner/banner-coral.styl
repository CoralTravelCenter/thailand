.dm-banner
    padding 0 em(30)
    position relative

    @media screen and (min-width: 769px)
        padding 0
        max-width em(1336)
        margin-left auto
        margin-right auto
        margin-bottom em(60)

    &__img
        display block
        max-width 100%
        height auto
        border-radius: em(40)

    &__desc
        position absolute
        top em(60)
        left em(80)
        right em(80)
        text-align center

        @media screen and (min-width: 769px)
            text-align left
            top em(80)