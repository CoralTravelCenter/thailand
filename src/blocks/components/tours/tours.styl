.dm-tours
    padding 0 em(46)

    @media screen and (min-width: 769px)
        display flex
        flex-wrap wrap
        justify-content space-between

    &__item
        text-align center
        margin-bottom em(30)

        @media screen and (min-width: 769px)
            flex 0 1 48%

    &__img
        max-width 100%
        display block
        height auto
        border-radius em(40)
        margin 0 auto

    &__link
        display block
        cursor pointer
        position relative

    &__desc
        text-align center
        position absolute
        left 0
        right 0
        bottom em(32)

    &__btn
        display inline-flex
        border-radius (4/24em)
        background-color #FFAE00
        transition all 0.3s
        color #fff
        font-size em(24)
        font-weight 700
        min-width (250/24em)
        line-height (50/24em)
        justify-content center
        margin-bottom (6/24em)

        &:hover
            background-color #d18f00

.dm-title--tours
    display block
    text-align center
    color #fff