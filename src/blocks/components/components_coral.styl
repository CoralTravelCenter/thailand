// стили компонентов для проекта Coral
@import "btn/btn-coral"
@import "intro/intro-search-coral"
@import "benefits/benefits-coral"
@import "benefits4/benefits4-coral"
@import "intresting/intresting-coral"
@import "gift/gift-coral"
@import "text-block/text-block-coral"
@import "contact/contact-coral"
@import "share/share-coral"

.bcrumb.d-xl-block
    display none!important

.dm-tab
    &__headers
        display block
        padding 0 em(48)
        margin-bottom em(80)
        display flex
        justify-content space-between

        @media screen and (min-width: 769px)
            margin-bottom em(60)
            justify-content: center
    
    &__title
        font-size em(24)
        line-height (29/24em)
        color #000
        font-weight bold
        transition all 0.3s
        border-radius (8/24em)
        border: 2px solid #000;
        text-align center
        cursor pointer
        padding (10/24em) (20/24em)
        user-select none
        margin 0
        min-width: (300/24em)

        @media screen and (min-width: 769px)
            font-size em(20)
            line-height (24/20em)
            padding (10/20em) (30/20em)
            margin 0 1em

        &:hover
        &.selected
            background-color #F0AB00
            color #fff
            border-color #F0AB00

        &__span
            text-transform uppercase
            font-weight 700
            display block

        &:first-child
            margin-left 0
        
        &:last-child
            margin-right 0

.dm-tabs

    &__header
        font-size: em(40)
        line-height: (44/40em)
        text-align: center;
        color: #000000;
        margin-bottom 2em

.dm-bottom
    @media screen and (min-width: 769px)
        display flex
        position relative
        margin-top em(30)
        margin-bottom em(90)

        &:before
            position absolute
            left 50%
            top em(10)
            bottom em(10)
            content ''
            width 1px
            background-color #000

        &__left
        &__right
            width 50%
            text-align center

        .dm-social-2-wrap
            padding 0
            display inline-block

        .dm-social-2--bottom
            padding em(8) 0 0 0
        
        .dm-contant
            margin 0

        .dm-social-2__title__span
            font-size (24/42em)
            font-weight normal
            line-height (80/24em)

        .dm-social-2__title
            text-align left
            margin 0

        .dm-social-2
            justify-content flex-start

        .dm-social-2__item
            margin 0 em(56) 0 0

        .dm-section--contact
            display inline-block
        
        .dm-contant__title
            text-align left

        .dm-contant__number
            text-align left
        
        .dm-contant__note
            text-align left